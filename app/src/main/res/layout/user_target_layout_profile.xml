<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/motive_string_res"
        android:textStyle="bold"
        android:textColor="@color/colorGrey_666666"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/lose_weight"
            android:text="Сбросить вес"
            android:textAlignment="center"
            android:textSize="18sp"
            android:button="@null"
            android:layout_marginBottom="10dp"
            android:background="@drawable/radio_selector"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <RadioButton
            android:id="@+id/gain_weight"
            android:text="Набрать вес"
            android:textAlignment="center"
            android:textSize="18sp"
            android:button="@null"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/radio_selector"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <RadioButton
            android:id="@+id/fix_the_weight"
            android:text="Зафиксировать вес"
            android:textAlignment="center"
            android:textSize="18sp"
            android:button="@null"
            android:background="@drawable/radio_selector"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
    </RadioGroup>
</LinearLayout>