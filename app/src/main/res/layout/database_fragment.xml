<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.fragments.DatabaseFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Category"
            android:textSize="18sp"
            android:id="@+id/category_text_view"
            android:layout_marginStart="40dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_food_category"
            android:layout_marginTop="16dp"
            android:layout_marginStart="21dp"
            app:cardElevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_corner_database"
            app:layout_constraintTop_toBottomOf="@id/category_text_view"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/colorLightGreen"
                android:layout_width="180dp"
                android:layout_height="180dp">
                <ImageView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_fruit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/recipes_text_view"
            app:layout_constraintStart_toStartOf="@id/layout_food_category"
            app:layout_constraintTop_toBottomOf="@id/layout_food_category"
            android:text="Recipes"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_workout_category"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="21dp"
            app:cardElevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_corner_database"
            app:layout_constraintTop_toBottomOf="@id/category_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/colorLightGreen"
                android:layout_width="180dp"
                android:layout_height="180dp">
                <ImageView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_kettlebell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/workout_text_view"
            app:layout_constraintStart_toStartOf="@id/layout_workout_category"
            app:layout_constraintTop_toBottomOf="@id/layout_workout_category"
            android:text="Workout"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_advice_category"
            android:layout_marginTop="10dp"
            android:layout_marginStart="21dp"
            app:cardElevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_corner_database"
            app:layout_constraintTop_toBottomOf="@id/recipes_text_view"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/colorLightGreen"
                android:layout_width="180dp"
                android:layout_height="180dp">
                <ImageView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_health_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/advice_text_view"
            app:layout_constraintStart_toStartOf="@id/layout_advice_category"
            app:layout_constraintTop_toBottomOf="@id/layout_advice_category"
            android:text="Advices"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            app:indicatorColor="@color/colorLightGreen"
            android:indeterminate="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/advice_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/advice_text_view"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>