<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id"
    android:id="@+id/nav_controller">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.healtsorsomethingelse.ui.mainScreen.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/databaseFragment"
        android:name="com.example.healtsorsomethingelse.ui.mainScreen.fragments.DatabaseFragment"
        android:label="database_fragment"
        tools:layout="@layout/database_fragment" >
        <action
            android:id="@+id/action_databaseFragment_to_searchScreen"
            app:destination="@id/searchScreen" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.healtsorsomethingelse.ui.mainScreen.fragments.HomeFragment"
        android:label="home_fragment"
        tools:layout="@layout/home_fragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.healtsorsomethingelse.ui.mainScreen.fragments.ProfileFragment"
        android:label="profile_fragment"
        tools:layout="@layout/profile_fragment" />
    <activity
        android:id="@+id/fitViewing"
        android:name="com.example.healtsorsomethingelse.ui.FitViewing"
        android:label="activity_fit_viewing"
        tools:layout="@layout/activity_fit_viewing" />
    <activity
        android:id="@+id/mealViewing"
        android:name="com.example.healtsorsomethingelse.ui.MealViewing"
        android:label="activity_meal_viewing"
        tools:layout="@layout/activity_meal_viewing" />
    <activity
        android:id="@+id/searchScreen"
        android:name="com.example.healtsorsomethingelse.ui.SearchScreen"
        android:label="activity_search_screen"
        tools:layout="@layout/activity_search_screen" />
    <activity
        android:id="@+id/searchableContent"
        android:name="com.example.healtsorsomethingelse.ui.SearchableContent"
        android:label="activity_searchable_content"
        tools:layout="@layout/activity_searchable_content" />
</navigation>